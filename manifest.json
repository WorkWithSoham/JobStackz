{
  "manifest_version": 3,
  "name": "JobStack",
  "version": "1.0.0",
  "description": "Track a list of all the Job applications easily!",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "icons": {
    "128": "src/assets/icon.png",
    "48": "src/assets/icon.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content-script.tsx"
      ]
    }
  ]
}