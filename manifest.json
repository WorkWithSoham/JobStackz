{
  "manifest_version": 3,
  "name": "Job Tracking Extension",
  "version": "1.0.0",
  "description": "Track a list of all the Job applications easily!",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content-script.tsx"
      ]
    }
  ]
}